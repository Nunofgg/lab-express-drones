<div class="row list-page">
    <h2>Available drones</h2>
    {{#each drones}}
        <div class="col-md-4 single-card">
             <h3>{{name}}</h3>
            <p>Number of propellers: {{propellers}}</p>
            <p>Speed: {{maxSpeed}}</p>
            <a href="/drones/{{id}}/edit">Edit</a>
            <form action="/drones/{{id}}/delete" method="POST">
                <button type="submit">Delete</button>
            </form>
        </div>
    {{/each}}
    <a href="/drones/create">Add new drone</a>
</div>